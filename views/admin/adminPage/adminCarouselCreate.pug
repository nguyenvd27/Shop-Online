extends ../layout/header.pug
block content
  .container
    .row
      .col-12
        br 
        h1
          span.mt-100.mr-10 Create Carousel
        hr.soft
        if errors
          each error in errors
            .alert.alert-danger= error
        form(action="/admin/carousels/create", method="POST", enctype="multipart/form-data")
          .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" value= values ? values.name : '')
          .form-group
            label(for="image") Image
            input#image.form-control-file(type="file" name="image")
          button.btn.btn-success Create
  // Footer ==========================================================
  include ../layout/footer.pug
