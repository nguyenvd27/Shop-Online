extends ../layout/header.pug
block content
  .container
    .row
      .col-12
        h1
          span.mt-100.mr-10 Create Product
        hr.soft
        if errors
          each error in errors
            .alert.alert-danger= error
        form(action="/admin/products/create", method="POST", enctype="multipart/form-data")
          .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" value= values ? values.name : '')
          .form-group
            label(for="price") Price
            input#price.form-control(type="number" name="price" value= values ? values.price : '')
          .form-group
            label.control-label(for='category') Category
            select#state(name='category') 
                option(value='') -
                option(value='1') Áo Nam
                option(value='2') Quần Nam
          .form-group
            label(for="supplier") Supplier
            input#supplier.form-control(type="text" name="supplier" value= values ? values.supplier : '')
          .form-group
            label(for="desc") Description
            input#desc.form-control(type="text" name="desc" value= values ? values.desc : '')
          .form-group
            label(for="image") Image
            input#image.form-control-file(type="file" name="image")
          button(class="btn btn-success") Create
  // Footer ==========================================================
  include ../layout/footer.pug
